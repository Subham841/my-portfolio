rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Projects: Public read, admin-only write
    match /projects/{projectId} {
      allow get, list: if true;
      allow write: if isSignedIn(); // In a real app, you'd check for an admin role
    }

    // Contacts: Public can create, only admin can read
    match /contacts/{contactId} {
      allow create: if true;
      allow read, list, update, delete: if isSignedIn(); // Admin only
    }

    // Settings: Public read, admin-only write
    match /settings/{settingId} {
      allow get: if true;
      allow write: if isSignedIn(); // Admin only
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
